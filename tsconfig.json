{
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./dist",
    "declarationDir": "./dist",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "sourceMap": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "incremental": true,
    "target": "ESNext",
    "module": "esnext",
    "lib": ["ESNext", "es5", "es6", "es2015", "es2015.promise", "es2016", "es2017", "dom", "dom.iterable"],
    "declaration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx"
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "bin", "dist"]
}
