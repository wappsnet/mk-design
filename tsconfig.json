 {
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": "src",
    "outDir": "dist",
    "declarationDir": "dist",
    "declarationMap": true,
    "module": "esnext",
    "target": "ESNext",
    "lib": [
      "es5",
      "es6",
      "es2015",
      "es2015.promise",
      "es2016",
      "es2017",
      "dom",
      "dom.iterable"
    ],
    "declaration": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "useUnknownInCatchVariables": false,
    "strictBindCallApply": true,
    "incremental": true,
    "jsx": "react-jsx"
  },
   "include": [
     "src/**/*"
   ],
   "exclude": [
     "./node_modules",
     "./lib",
     "./bin",
     "./dist",
   ]
}
