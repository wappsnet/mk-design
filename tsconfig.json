 {
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": "src",
    "outDir": "dist",
    "declarationDir": "dist",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "declaration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
   "include": [
     "src/**/*"
   ],
   "exclude": [
     "./node_modules",
     "./lib",
     "./bin",
     "./dist",
   ]
}
